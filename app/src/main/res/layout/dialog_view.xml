<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000">

    <LinearLayout
        android:id="@+id/ll_duihuanbeijing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_dialog_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="拍照"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@drawable/btn_click_bg" />

        <Button
            android:id="@+id/btn_dialog_gallery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="从相册中选择"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@drawable/btn_click_bg" />

        <Button
            android:id="@+id/btn_my_log_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:text="取消"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@drawable/btn_click_bg" />
    </LinearLayout>

    <TextView
        android:id="@+id/v_duihuanbeijing"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/ll_duihuanbeijing" />

</RelativeLayout>