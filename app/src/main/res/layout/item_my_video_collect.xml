<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_video_collent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="110dp"
                android:layout_height="78dp"
                android:src="@mipmap/img_moren"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/iv_video">

                <TextView
                    android:id="@+id/tv_vedio_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_yasi"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_zhuangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_vedio_name"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="3dp"
                    android:text="实用1"
                    android:textColor="@color/text_yasi"
                    android:textSize="12sp"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:id="@+id/rl_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_zhuangtai"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/iv_jifeng"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/jifen" />

                    <TextView
                        android:id="@+id/tv_jifen_num"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/iv_jifeng"
                        android:gravity="center"
                        android:textColor="@color/orange"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/tv_jifen_num"
                        android:gravity="center"
                        android:text="积分"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/ll_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_collect"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="3dp"
                            android:src="@mipmap/yellow_wjx" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="收藏"
                            android:textColor="@color/text_zhuangtai"
                            android:textSize="12sp" />

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_xiangqing"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/img_goto_xiangqing" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/video_view"/>
    </LinearLayout>
</RelativeLayout>
