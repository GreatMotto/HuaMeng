<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_teah_video"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
         android:src="@mipmap/img_moren"/>

    <TextView
        android:id="@+id/tv_teah_title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toRightOf="@id/iv_teah_video"
        android:gravity="top"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/item_title_color"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_score"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/tv_teah_title"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/iv_teah_video"
        android:src="@mipmap/integral" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_teah_title"
        android:layout_toRightOf="@id/iv_score"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_teah_content"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textColor="@color/item_status_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_teah_cont"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="积分"
            android:textColor="@color/text_name"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_teah_price"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/iv_score"
        android:layout_toRightOf="@id/iv_teah_video"
        android:gravity="bottom"
        android:textColor="@color/orange"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_teah_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_score"
        android:drawableLeft="@mipmap/teah_count"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingRight="10dp"
        android:textColor="@color/item_content_color"
        android:textSize="15sp" />


</RelativeLayout>