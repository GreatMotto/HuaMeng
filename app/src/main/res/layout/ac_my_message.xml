<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_gerenxx"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/item_content_color"
                    android:textSize="15sp"
                    android:text="头像" />

                <ImageView
                    android:id="@+id/iv_pic_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/cen_right" />

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="13dp"
                    android:layout_toLeftOf="@id/iv_pic_right"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_my_center_pic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="2dp"
                        android:background="@drawable/round_black"
                        android:src="@mipmap/touxiang11"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:id="@+id/rl_message_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/item_content_color"
                    android:textSize="15sp"
                    android:text="昵称" />

                <ImageView
                    android:id="@+id/iv_username_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/cen_right" />

                <TextView
                    android:id="@+id/tv_my_center_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_toLeftOf="@id/iv_username_right"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:id="@+id/rl_message_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/item_content_color"
                    android:textSize="15sp"
                    android:text="学号" />

                <ImageView
                    android:id="@+id/iv_number_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/cen_right" />

                <TextView
                    android:id="@+id/tv_my_center_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_toLeftOf="@id/iv_number_right"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:id="@+id/rl_message_sex"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/item_content_color"
                    android:textSize="15sp"
                    android:text="性别" />

                <ImageView
                    android:id="@+id/iv_sex_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/cen_right" />

                <TextView
                    android:id="@+id/tv_my_center_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_toLeftOf="@id/iv_sex_right" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:id="@+id/rl_message_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/item_content_color"
                    android:textSize="15sp"
                    android:text="生日" />

                <ImageView
                    android:id="@+id/iv_data_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/cen_right" />

                <TextView
                    android:id="@+id/tv_my_center_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:maxLength="10"
                    android:layout_toLeftOf="@id/iv_data_right"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/item_content_color"
                    android:textSize="15sp"
                    android:text="手机" />

                <ImageView
                    android:id="@+id/iv_phone_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"
                    android:src="@mipmap/cen_right" />

                <TextView
                    android:id="@+id/tv_my_center_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_toLeftOf="@id/iv_phone_right"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#d2d2d2" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="#f2f2f2" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:id="@+id/rl_my_center_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/item_content_color"
                    android:textSize="15sp"
                    android:text="邮箱" />

                <ImageView
                    android:id="@+id/iv_email_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/cen_right" />

                <TextView
                    android:id="@+id/tv_my_center_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_toLeftOf="@id/iv_email_right"
                    android:text="" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#d2d2d2" />

            <RelativeLayout
                android:id="@+id/rl_message_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/item_content_color"
                    android:textSize="15sp"
                    android:text="登录密码" />

                <ImageView
                    android:id="@+id/iv_password_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/cen_right" />

                <TextView
                    android:id="@+id/tv_my_center_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:layout_toLeftOf="@id/iv_password_right"
                    android:text="" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#d2d2d2" />

            <Button
                android:id="@+id/btn_my_log_exit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:text="@string/log_exit"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="15sp"
                android:background="@drawable/btn_click_bg" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
