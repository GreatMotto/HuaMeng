<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/titlebar" />

    <TextView
        android:id="@+id/tv_card_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="20dp"
        android:drawableLeft="@mipmap/pay_card"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="卡密支付"
        android:textSize="15sp"
        android:textColor="@color/item_content_color" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tv_card_pay"
        android:orientation="vertical"
        android:background="@drawable/agreement_bg">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:textColor="#3e3e3e"
                android:text="充值卡号" />

            <EditText
                android:id="@+id/et_card_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColorHint="#c9c9c9"
                android:textColor="@color/item_content_color"
                android:singleLine="true"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#d2d2d2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:textColor="#3e3e3e"
                android:text="@string/reg_password" />

            <EditText
                android:id="@+id/et_card_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginRight="15dp"
                android:background="#00000000"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textColorHint="#c9c9c9"
                android:textColor="@color/item_content_color"
                android:singleLine="true"
                android:textSize="15sp"
                android:inputType="textPassword"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_card_pay_now"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="立即充值"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="15sp"
        android:background="@drawable/btn_click_bg" />

</RelativeLayout>
